generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  LOW
  MEDIUM
  HIGH
}

model Activities {
  id     String  @id @default(uuid())
  name   String
  active Boolean
  taskId String
  task   Tasks   @relation(fields: [taskId], references: [id])
}

model Tasks {
  id         String       @id @default(uuid())
  name       String
  due_date   DateTime?
  status     TaskStatus?
  activities Activities[]
}
